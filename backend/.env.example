# Route2Rise Backend - Environment Variables
# Copy this to .env and fill in your values

# MongoDB Connection
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=route2rise

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Founder Credentials (Static - No Database Users)
FOUNDER_A_USERNAME=founder_a
FOUNDER_A_PASSWORD=change-this-password-in-production

FOUNDER_B_USERNAME=founder_b
FOUNDER_B_PASSWORD=change-this-password-in-production

# Application
APP_NAME=Route2Rise
DEBUG=false
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
